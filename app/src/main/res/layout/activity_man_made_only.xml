<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_man_made_only"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.przemek.picturequiz.activities.ManMadeOnlyActivity">


    <ImageView
            android:layout_width="wrap_content"
            style="@style/GeneralTextStyle"
            android:layout_height="wrap_content"
            android:id="@+id/Picture"
            android:text="Picturetest"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/man_made_vertical_margin">
    </ImageView>

    <TextView
            android:layout_width="wrap_content"
            style="@style/GeneralTextStyle"
            android:layout_height="wrap_content"
            android:id="@+id/Answer1"
            android:layout_below="@+id/Picture"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/man_made_vertical_margin">
    </TextView>

    <TextView
            android:layout_width="wrap_content"
            style="@style/GeneralTextStyle"
            android:layout_height="wrap_content"
            android:id="@+id/Answer2"
            android:layout_below="@+id/Answer1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/man_made_vertical_margin">
    </TextView>

    <TextView
            android:layout_width="wrap_content"
            style="@style/GeneralTextStyle"
            android:layout_height="wrap_content"
            android:id="@+id/Answer3"
            android:layout_below="@+id/Answer2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/man_made_vertical_margin">
    </TextView>

    <TextView
            android:layout_width="wrap_content"
            style="@style/GeneralTextStyle"
            android:layout_height="wrap_content"
            android:id="@+id/Answer4"
            android:layout_below="@+id/Answer3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/man_made_vertical_margin">
    </TextView>

</RelativeLayout>
