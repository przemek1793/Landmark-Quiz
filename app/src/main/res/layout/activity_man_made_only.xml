<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_man_made_only"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.przemek.picturequiz.activities.ManMadeOnlyActivity">


    <TextView
            android:layout_width="wrap_content"
            style="@style/GeneralTextStyle"
            android:layout_height="wrap_content"
            android:id="@+id/Picture"
            android:text="Picturetest">
    </TextView>

    <TextView
            android:layout_width="wrap_content"
            style="@style/GeneralTextStyle"
            android:layout_height="wrap_content"
            android:id="@+id/Answer1"
            android:text="Answer1test"
            android:layout_below="@+id/Picture">
    </TextView>

    <TextView
            android:layout_width="wrap_content"
            style="@style/GeneralTextStyle"
            android:layout_height="wrap_content"
            android:id="@+id/Answer2"
            android:text="Answer2test"
            android:layout_below="@+id/Answer1">
    </TextView>

    <TextView
            android:layout_width="wrap_content"
            style="@style/GeneralTextStyle"
            android:layout_height="wrap_content"
            android:id="@+id/Answer3"
            android:text="Answer3test"
            android:layout_below="@+id/Answer2">
    </TextView>

    <TextView
            android:layout_width="wrap_content"
            style="@style/GeneralTextStyle"
            android:layout_height="wrap_content"
            android:id="@+id/Answer4"
            android:text="Answer4test"
            android:layout_below="@+id/Answer3">
    </TextView>

    <TextView
            android:layout_width="wrap_content"
            style="@style/GeneralTextStyle"
            android:layout_height="wrap_content"
            android:id="@+id/CorrectAnswer"
            android:text="Correct answertest"
            android:layout_below="@+id/Answer4">
    </TextView>

</RelativeLayout>
