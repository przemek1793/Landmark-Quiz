<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/colorDarkGray</item>
    </style>

    <style name="GeneralTextStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/button_border</item>
        <item name="android:padding">@dimen/text_padding</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/button_border</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:layout_marginLeft">@dimen/button_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/button_horizontal_margin</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/ButtonTextSize</item>
    </style>

    <style name="LinearLayoutButtonStyle" parent="@style/ButtonStyle">
        <item name="android:layout_weight">@integer/button_weight</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="RelativeLayoutButtonStyle" parent="@style/ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

</resources>
